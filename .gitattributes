# Auto detect text files and perform LF normalization
* text=auto

# Force these files to be CRLF (Windows) on checkout
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Force these files to be LF (Unix) on checkout
*.sh text eol=lf
*.py text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Binary files (don't modify line endings)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.exe binary
*.dll binary
*.pyd binary
*.so binary
*.dylib binary
*.a binary
*.o binary
*.pyc binary
*.pyd binary
*.pyo binary
*.pyd binary
*.so binary
*.dylib binary
*.a binary
*.o binary
*.pyc binary
*.pyd binary
*.pyo binary
